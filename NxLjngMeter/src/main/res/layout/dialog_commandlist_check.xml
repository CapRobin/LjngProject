<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dip" >

    <LinearLayout
        style="@style/content"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="350dp"
        android:background="@drawable/selector_setting_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/dialog_top_bg">

            <TextView
                android:id="@+id/title"
                style="@style/page_title_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="操作项选择"
                android:textSize="17dp" />

        </RelativeLayout>


        <ListView
            android:id="@+id/content_list"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/gray"
            android:dividerHeight="0.1dip"
            android:fadingEdge="none"
            android:overScrollFooter="@android:color/transparent"
            android:overScrollHeader="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:fastScrollEnabled="false"
            android:listSelector="@drawable/listview_selector"
            android:scrollingCache="false" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/main_divider_line" />

        <Button
            android:id="@+id/ok_btn"
            android:background="@drawable/selector_dialog_bottom_bg"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:textSize="17dp"
            android:text="确      定" />
    </LinearLayout>

</RelativeLayout>