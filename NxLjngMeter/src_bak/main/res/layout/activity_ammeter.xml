<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/bolck_titlebar"
        layout="@layout/block_header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:fastScrollEnabled="true">

        <LinearLayout
            android:id="@+id/settingView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/pop_01"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hiddenview2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="9dip"
                    android:text="请选择查询项目"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffc8c8c8" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip">

                    <LinearLayout
                        android:id="@+id/cbxm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/checkLayout01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="15dip">

                            <TextView
                                android:id="@+id/checkItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="抄表项目:"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/checkItemEdit"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dip"
                                android:layout_toRightOf="@+id/checkItem"
                                android:background="@drawable/t_login_layout_editor_bg"
                                android:editable="false"
                                android:hint="请选择查询项目"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:textColor="#7c7c7c"
                                android:textSize="15sp">

                            </EditText>
                        </RelativeLayout>

                        <!--抄表项目隐藏视图-->
                        <LinearLayout
                            android:id="@+id/checkItemView"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/test_01"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="5dip"
                                android:paddingRight="5dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:text="测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据"
                                    android:textColor="@color/gary" />

                                <Button
                                    android:id="@+id/startSearch"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/selector_btn"
                                    android:text="测试按钮"
                                    android:textColor="@color/black" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cbbh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/checkLayout02"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dip">

                            <TextView
                                android:id="@+id/meterNumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="抄表表号:"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/meterNumEdit"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dip"
                                android:layout_toRightOf="@+id/meterNumText"
                                android:background="@drawable/t_login_layout_editor_bg"
                                android:hint="请输入查询表号"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:textColor="#7c7c7c"
                                android:textSize="15sp">
                            </EditText>

                            <ImageView
                                android:id="@+id/searchNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/search_meter" />
                        </RelativeLayout>


                        <!--查询表号隐藏视图-->
                        <LinearLayout
                            android:id="@+id/searchNumView"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/test_01"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="5dip"
                                android:paddingRight="5dip">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据"
                                    android:textColor="@color/gary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据"
                                    android:textColor="@color/gary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据"
                                    android:textColor="@color/gary" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="fill_parent"
                        android:layout_height="34dp"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="30dip"
                        android:background="@drawable/selector_btn"
                        android:padding="2dip"
                        android:text="抄    表"
                        android:textColor="#2e2e2e"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="数据显示区域"
            android:textColor="@color/blue_500"
            android:textSize="25dp" />
    </RelativeLayout>

</LinearLayout>
