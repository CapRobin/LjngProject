<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout 
        android:layout_width="@dimen/loading_pixel"
        android:layout_height="@dimen/loading_pixel"
        android:background="@drawable/loading_progress_bg"
        android:layout_centerInParent="true"
        android:padding="8dip"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        
        <ProgressBar 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@anim/anim_loading"
            />
        
        <TextView 
            android:id="@+id/loading_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/loading_text_str"
            android:textColor="@color/white"/>
        
    </LinearLayout>

</RelativeLayout>